      .header
        a(href="/").logo-container
          .front
            .logo
          .back#scroll-flip-button

        .navbar-container
          ul.navbar
            li(class=title?undefined: 'active')
              a(href="/") 首页
            li(class=title=='观点'?'active': undefined)
              a(href="/viewpoint") 观点
            li(class=title=='项目'?'active': undefined)
              a(href="/projects") 项目
            li(class=title=='动态'?'active': undefined)
              a(href="/news") 动态
            li(class=title=='关于'?'active': undefined)
              a(href="/about") 关于
